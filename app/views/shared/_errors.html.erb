<% if obj.errors.any? %>
<div class="alert alert-danger" role="alert">
  <h4 class="alert-heading"> 
    <%= pluralize(obj.errors.count, "error") %> Following Errors prevented the <%= obj.class.name.downcase %>  from being saved:
  </h4>
  <ul>
    <% obj.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>