<div class="container">
    <div class="row justify-content-center">
    <div class="col-10 p-3 rounded-lg">
    <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class:"shadow p-3 rounded bg-info") do |form| %>
        <div class="form-group row">
          <%= form.label :username,class:"col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.text_field :username, class:"form-control shadow rounded", placeholder: "Enter a username" %>
        </div>
        </div>

        <div class="form-group row">
          <%= form.label :email, class:"col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.email_field :email, rows: 10,class:"form-control shadow rounded", placeholder: "Enter Valid Email" %>
          </div>
        </div>

        <div class="form-group row">
            <%= form.label :password, class:"col-2 col-form-label text-light" %>
            <div class="col-10">
            <%= form.password_field :password, rows: 10,class:"form-control shadow rounded", placeholder: "Choose a Password" %>
            </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit "Sign Up", class:"btn btn-light btn-lg" %>
        </div>
    </div>    
          <%= link_to '[ Cancel and Return to Article Listing ]', articles_path,class:"mb-4" %>
      <% end %>
  </div>
</div>