<div id="page-content">
    <h1 class="text-center mt-4">Log-in for Alpha Omega</h1>
    <div class="container">
        <div class="row justify-content-center">
        <div class="col-10 p-3 rounded-lg">
          <%= form_with(scope: :session, url: login_path, class:"shadow p-3 rounded bg-info") do |form| %>
    
            <div class="form-group row">
              <%= form.label :email, class:"col-2 col-form-label text-light" %>
              <div class="col-10">
              <%= form.email_field :email, rows: 10,class:"form-control shadow rounded", placeholder: "Enter your Email" %>
              </div>
            </div>
    
            <div class="form-group row">
                <%= form.label :password, class:"col-2 col-form-label text-light" %>
                <div class="col-10">
                <%= form.password_field :password, rows: 10,class:"form-control shadow rounded", placeholder: "Enter your Password" %>
                </div>
            </div>
    
            <div class="form-group row justify-content-center">
              <%= form.submit "Log In", class:"btn btn-light btn-lg" %>
            </div>
        </div>    
              <%= link_to '[ Cancel and Return to Article Listing ]', articles_path,class:"mb-4" %>
          <% end %>
      </div>
    </div>
</div>